{
    "license": "MIT",
    "scripts": {
        "prestart": "chmod +x ./hooks/prestart.sh && ./hooks/prestart.sh",
        "start": "cd ./blockchain/ && yarn run-s run:blockchain:daemonize build:deploy",
        "poststart": "cd ./frontend/ && yarn start",
        "stop": "kill $(lsof -t -i:8545) || true",
        "poststop": "echo 'exited successfully'"
    },
    "dependencies": {
        "nodemon": "^2.0.7",
        "npm-run-all": "^4.1.5"
    },
    "nodemonConfig": {
        "ignore": [
            "**/*/cache/",
            "**/*/artifacts/",
            "**/*/frontend/",
            "**/*/node_modules/**/*"
        ],
        "events": {
            "config": "exit",
            "exit": "",
            "restart": "clear && printf '\\033[3J'",
            "start": "clear && printf '\\033[3J'"
        }
    }
}