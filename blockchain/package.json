{
    "license": "MIT",
    "directories": {
        "test": "test"
    },
    "scripts": {
        "prestart": "yarn run:blockchain &",
        "start": "yarn run-s build build:deploy",
        "poststart": "yarn run:prettier",
        "prebuild": "yarn build:clean",
        "build": "yarn hardhat compile",
        "build:deploy": "yarn hardhat --network localhost run scripts/deploy-entry.ts",
        "_build:watch1": "yarn nodemon --exec 'yarn build:deploy' --watch contracts --verbose",
        "_build:watch2": "yarn nodemon --exec 'yarn run-s build build:deploy' --watch ./package.json",
        "build:clean": "yarn hardhat clean",
        "run:blockchain": "yarn hardhat node",
        "run:blockchain:daemonize": "yarn hardhat node &",
        "run:prettier": "shopt -s extglob && yarn prettier '?(tasks|scripts|test|frontend)/**/*' --write --ignore-unknown",
        "run:test": "yarn hardhat test"
    },
    "devDependencies": {
        "@nomiclabs/hardhat-ethers": "^2.0.1",
        "@nomiclabs/hardhat-waffle": "^2.0.1",
        "@types/chai": "^4.2.14",
        "@types/mocha": "^8.0.4",
        "@types/node": "^14.14.10",
        "chai": "^4.2.0",
        "dotenv": "^8.2.0",
        "ethereum-waffle": "^3.1.1",
        "ethers": "^5.0.0",
        "hardhat": "^2.0.0",
        "husky": "^4.2.5",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.2.1",
        "ts-node": "^9.0.0",
        "typescript": "^4.1.2"
    },
    "dependencies": {
        "@openzeppelin/contracts": "^3.3.0",
        "@types/fs-extra-promise": "^1.0.9",
        "@uniswap/lib": "^4.0.1-alpha",
        "@uniswap/v2-periphery": "^1.1.0-beta.0",
        "fs-extra-promise": "^1.0.1",
        "hardhat-deploy": "^0.7.0-beta.44",
        "hardhat-deploy-ethers": "^0.3.0-beta.7",
        "nodemon": "^2.0.7"
    },
    "nodemonConfig": {
        "ignore": [
            "**/*/cache/",
            "**/*/artifacts/",
            "**/*/node_modules/**/*"
        ],
        "events": {
            "config": "exit",
            "exit": "",
            "restart": "clear && printf '\\033[3J'",
            "start": "yarn build:clean && clear && printf '\\033[3J'"
        }
    }
}